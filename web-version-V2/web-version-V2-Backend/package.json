{
  "name": "bun-backend",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "build": "bun build ./index.ts --outdir ./dist --target bun --minify --external brotli-wasm",
    "start": "bun run ./dist/index.js",
    "test": "bun test src/__tests__/index.test.ts",
    "test:watch": "bun test --watch src/__tests__/index.test.ts",
    "test:coverage": "bun test --coverage src/__tests__/index.test.ts",
    "test:ui": "bun test --watch --rerun-each src/__tests__/index.test.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.2.19",
    "@types/qrcode": "^1.5.5"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "hono": "^4.8.12",
    "hono-rate-limiter": "^0.4.2",
    "hono-compress": "^0.7.0",
    "qrcode": "^1.5.4"
  },
  "trustedDependencies": [
    "@mongodb-js/zstd"
  ]
}